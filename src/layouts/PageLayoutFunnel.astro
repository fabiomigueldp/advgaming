---
import Block from "@components/block/Block.astro";
import BaseLayout from "./BaseLayout.astro";
import HeroFunnel from "@components/hero/HeroFunnel.astro";
import { getValidLocale, DEFAULT_LOCALE, type SupportedLocale } from "@util/translate";

const props = Astro.props;
const { title, description, blocks, style, thumbnail, og_image, lang: propsLang } = Astro.props;

// Get language from props or URL
const urlLang = Astro.url.pathname.split('/').filter(Boolean)[0];
const lang = getValidLocale(propsLang || urlLang || DEFAULT_LOCALE);

const hasBlocks = blocks && blocks.length > 0;
---

<BaseLayout {title} {description} {...style} {thumbnail} {og_image} {lang}>
  <HeroFunnel {...props}>
    <slot name="hero" />
  </HeroFunnel>

  <div class="relative w-full" id="more">
    <div
      class=`page__content container-${style.container || 'md'} ${style.content_class || "py-14"} `
    >
      <slot />
      {!hasBlocks && <slot name="nav" />}
    </div>

    {
      hasBlocks && (
        <>
          <div class={style.block_class}>
            {blocks.map((section) => (
              <Block {...section} />
            ))}
          </div>

          <slot name="nav" />
        </>
      )
    }
  </div>
</BaseLayout>

<style is:global>
  .page__content {
    &:empty {
      display: none;
    }
    &:has(> .richtext:empty) {
      display: none;
    }
    .img,
    iframe {
      width: calc(100% + var(--container-spacing));
      margin-left: calc(var(--spacing) * -1);
      @apply my-10 aspect-video h-auto;
      @screen md {
        width: 100%;
        margin-left: 0;
      }
    }
  }
</style>
