# ===============================================
# ADVENTURY GAMING - Environment Variables
# ===============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# -----------------------------------------------
# SITE CONFIGURATION
# -----------------------------------------------
SITE_URL=http://localhost:4321

# -----------------------------------------------
# STRIPE PAYMENT INTEGRATION
# -----------------------------------------------
# Get your API keys at https://dashboard.stripe.com/apikeys

# Secret key (required for checkout)
# Use test key (sk_test_xxx) for development
# Use live key (sk_live_xxx) for production
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Webhook signing secret (recommended for production)
# Create webhook at https://dashboard.stripe.com/webhooks
# Point to: https://yourdomain.com/api/stripe/webhook
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# -----------------------------------------------
# EMAIL SERVICE (for order confirmations)
# -----------------------------------------------
# Choose one provider and configure its variables

# Option 1: Postmark
POSTMARK_SERVER_TOKEN=your_postmark_server_token
FROM_EMAIL_ADDRESS=noreply@adventury.com.br

# Option 2: Resend
# RESEND_API_KEY=re_your_resend_api_key

# Option 3: SendGrid
# SENDGRID_API_KEY=SG.your_sendgrid_api_key

# -----------------------------------------------
# CONTACT FORM (optional)
# -----------------------------------------------
TO_EMAIL_ADDRESS=contato@adventury.com.br

# -----------------------------------------------
# ANALYTICS (optional)
# -----------------------------------------------
# Google Analytics 4
# GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Meta Pixel
# META_PIXEL_ID=your_pixel_id

# -----------------------------------------------
# CMS BACKEND (for production deployments)
# -----------------------------------------------
# For Netlify Identity
# Leave empty for local development (uses test-repo)
# GIT_GATEWAY_URL=https://your-site.netlify.app/.netlify/identity
